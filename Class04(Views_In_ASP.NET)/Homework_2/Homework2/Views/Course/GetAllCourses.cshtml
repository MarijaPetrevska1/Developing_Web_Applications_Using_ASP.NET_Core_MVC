@using Homework2.Models.DtoModel
@model IEnumerable<CourseWithDetailsDto>

@{
    string courseTitleHeader = "All Courses";
}

<h2>@courseTitleHeader</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Number of Classes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.NumberOfClasses</td>
            </tr>
        }
    </tbody>
</table>

