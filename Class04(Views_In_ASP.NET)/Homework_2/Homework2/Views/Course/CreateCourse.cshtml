@using Homework2.Models.ViewModels
@model CreateCourseVM

<h2>Create Course</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="createCourse">
            <div>
                <label for="Name">Course Name:</label>
                <input type="text" id="Name" name="Name" />
            </div>
            <div>
                <label for="NumberOfClasses">Number of Classes:</label>
                <input type="number" id="NumberOfClasses" name="NumberOfClasses" />
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</div>
