@model EditStudentVM

<!-- TAG HELPER  - PARTIAL VIEW -->
<div class="container">
    <h2>Edit Student (TAG Helper + Partial View)</h2>
    <form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.Id" method="post">
        @await Html.PartialAsync("_StudentForm", Model)

        <div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="GetAllStudents" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
