<div class="container">
    <h2>Edit Student (HTML Helper)</h2>
    @using (Html.BeginForm("Edit", "Student", new { id = Model.Id }, FormMethod.Post))
    {
        <div>
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.DateOfBirth)
            @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control", type = "date" })
        </div>
        <div>
            @Html.LabelFor(x => x.ActiveCourseId)
            @Html.DropDownListFor(x => x.ActiveCourseId, new SelectList(Model.Courses, "Id", "Name"), "Select Course", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        @Html.ActionLink("Cancel", "GetAllStudents", null, new { @class = "btn btn-secondary" })
    }
</div>

